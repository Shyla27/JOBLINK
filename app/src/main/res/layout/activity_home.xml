<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="30sp"
        android:text="@string/app_name" />

    <ImageView android:id="@+id/imageViewgraduation"
        android:layout_below="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_link"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/imageViewgraduation"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="200dp"
            app:cardCornerRadius="6dp"
            android:background="@color/background">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPANY? Looking for Interns??"
                    android:textSize="20sp"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginLeft="20dp"
                    android:text="Find , Create opportunity and Future " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_stuck"
                        android:layout_marginLeft="10dp"
                        tools:ignore="VectorDrawableCompat" />

                    <Button
                        android:id="@+id/company"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:text="Click Here"
                        android:backgroundTint="@color/khaki"
                        android:textColor="@color/heads" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="200dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/heads">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/innerLayou">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you a Student"
                    android:textSize="20sp"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginLeft="20dp"
                    android:text="Find job opportunities ." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_link"
                        android:layout_marginLeft="10dp"
                        tools:ignore="VectorDrawableCompat" />

                    <Button
                        android:id="@+id/intern"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:text="Intern"
                        android:backgroundTint="@color/khaki"
                        android:textColor="@color/heads" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:layout_marginTop="500dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Logout" />

</RelativeLayout>